{
  "name": "hrms-unified",
  "version": "1.0.0",
  "description": "Unified HRMS Application with detailed logging",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "build": "cd client && npm install && npm run build",
    "test": "jest",
    "test-db": "node utils/test-db.js",
    "install-all": "npm install && cd client && npm install",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "stop": "pkill -f 'node server.js'",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-env": "./scripts/check-prerequisites.sh",
    "backup": "./scripts/backup.sh",
    "service:install": "./scripts/manage-service.sh install",
    "service:start": "./scripts/manage-service.sh start",
    "service:stop": "./scripts/manage-service.sh stop",
    "service:restart": "./scripts/manage-service.sh restart",
    "service:status": "./scripts/manage-service.sh status"
  },
  "keywords": ["hrms", "react", "nodejs", "mysql"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-rate-limit": "^7.1.5",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2"
  }
}
