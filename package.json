{
  "name": "hrms-unified",
  "version": "1.0.0",
  "description": "Unified HRMS Application with detailed logging",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "build": "cd client && npm install && npm run build",
    "test": "jest",
    "test-db": "node utils/test-db.js",
    "install-all": "npm install && cd client && npm install",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "stop": "pkill -f 'node server.js'"
  },
  "keywords": ["hrms", "react", "nodejs", "mysql"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "properties-reader": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "concurrently": "^8.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
